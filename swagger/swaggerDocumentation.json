{
  "openapi": "3.0.2",
  "info": {
    "title": "Spy Chat Swagger Documentation ",
    "version": "1.0.0"
  },
  "contact": {
    "name": "frazer Eastman ",
    "email": "frazereastman@gmail.com",
    "url": "https://shef.ac.uk"
  },
  "license": {
    "name": "Apache 2.0",
    "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
  },
  "servers": [{
    "url": "http://localhost:8031/",
    "description": "the Local server"
  }],
  "paths": {
    "/fetch_stories": {
      "post": {
        "tags": [
          "Fetching stories  "
        ],
        "description": "This will fetch all stories and display them on the home page",
        "operationId": "fetch all stories",
        "requestBody": {
          "required": true
        },
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Story"
                }
              }
            }
          }
        }
      }
    },

    "/post_new_story": {
      "post": {
        "tags": [
          "adding a new story  "
        ],
        "description": "This will add a new incident report",
        "operationId": "add a new story",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddStory"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Story added"
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "one of the fields is wrong",
                  "internal_code": "missing_parameters"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "title": {
        "type": "String",
        "description": "Title of the incident",
        "example": "Mick-Jagger Concert"
      },
      "author": {
        "type": "String",
        "description": "Name of the author ",
        "example": "John Doe"
      },
      "description": {
        "type": "String",
        "description": "Describe the incident ",
        "example": "The singer was rumoured to be making use of drugs of type A"
      },
      "image": {
        "type": "string",
        "format": "binary",
        "description": "add an image"
      },
      "AddStory": {
        "type": "object",
        "properties": {
          "title": {
            "$ref": "#/components/schemas/title"
          },
          "author": {
            "$ref": "#/components/schemas/author"
          },
          "description": {
            "$ref": "#/components/schemas/description"
          },
          "image": {
            "$ref": "#/components/schemas/image"
          }
        }
      },
      "Story": {
        "type": "object",
        "properties": {
          "Story": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AddStory"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "internal_code": {
            "type": "string"
          }
        }
      }
    }
  }
}